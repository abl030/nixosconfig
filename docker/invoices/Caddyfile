# invoices (Docspell) — tailnet-only hostname, DNS-01 via Cloudflare
invoices.ablz.au {
  tls {
    dns cloudflare {env.CLOUDFLARE_API_TOKEN}
  }

  @health path /health
  respond @health 200

  handle {
    reverse_proxy http://docspell-restserver:7880
  }
}

# Firefly III (accounts) — tailnet-only
accounts.ablz.au {
  tls {
    dns cloudflare {env.CLOUDFLARE_API_TOKEN}
  }

  @health path /health
  respond @health 200

  handle {
    reverse_proxy http://ff-app:8080
  }
}

# Firefly Data Importer (importer) — tailnet-only
importer.ablz.au {
  tls {
    dns cloudflare {env.CLOUDFLARE_API_TOKEN}
  }

  @health path /health
  respond @health 200

  handle {
    reverse_proxy http://ff-importer:8080
  }
}

# Optional local debug endpoint (unchanged)
:8080 {
  @health path /health
  respond @health 200

  handle {
    reverse_proxy http://ff-app:8080
  }
}

